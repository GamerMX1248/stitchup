fragment DirectionalLight;

[params]
float3 Direction : DIRECTIONAL_LIGHT_DIRECTION = float3(1, -1, 0);
float4 Color : DIRECTIONAL_LIGHT_DIFFUSE_COLOR;

[ps]
__hlsl__
void main(INPUT input, inout OUTPUT output)
{
	Light light;
	light.DirectionToLight = -Direction;
	light.Color = Color;

	export(Light, _Light, light);
}
__hlsl__