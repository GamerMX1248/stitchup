fragment PointLight;

[params]
float3 Position : POINT_LIGHT_POSITION;
float4 Color : POINT_LIGHT_DIFFUSE_COLOR;

[ps]
__hlsl__
void main(INPUT input, inout OUTPUT output)
{
	float3 worldPosition;
	import(_WorldPosition, worldPosition = _WorldPosition);

	Light light;
	light.DirectionToLight = Position - worldPosition;
	light.Color = Color;

	export(Light, _Light, light);
}
__hlsl__